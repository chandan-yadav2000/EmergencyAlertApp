<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout1"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".MultiActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">



            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <ImageView
                    android:id="@+id/imageMenu12"
                    android:layout_width="50dp"
                    android:contentDescription="@string/app_name"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_baseline_menu_24"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HelpLine Number"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bungee"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/policeClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:id="@+id/police"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/police"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="police"
                        android:layout_marginTop="100dp"
                        android:fontFamily="@font/bungee"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fireClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:id="@+id/fire"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/firefighter"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fire Fighter"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/bungee"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ambulanceClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ambulance"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ambulance"
                        android:textColor="@color/black"
                        android:layout_marginTop="100dp"
                        android:fontFamily="@font/bungee"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/womenClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:id="@+id/road"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/women"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Women Helpline"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/bungee"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/roadAccidentClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/accident"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Road Accident"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/bungee"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/railwayClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/railway"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Railway helpline"
                        android:textColor="@color/black"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/bungee"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/seniorClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/senior"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Senior Citizen"
                        android:textColor="@color/black"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/bungee"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/farmerClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/farmer"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Farmer"
                        android:layout_marginTop="100dp"
                        android:fontFamily="@font/bungee"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/childLabourClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/child"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Child Labour"
                        android:textColor="@color/black"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/bungee"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/lpgGas"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/gas"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LPG Helpline"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/bungee"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cyberClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/cyber"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cyber Security"
                        android:textColor="@color/black"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/bungee"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/animalClick"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    app:cardBackgroundColor="@color/red"
                    app:cardElevation="25dp" >
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/animal"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Animal Safety"
                        android:layout_marginTop="90dp"
                        android:fontFamily="@font/bungee"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view1"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>